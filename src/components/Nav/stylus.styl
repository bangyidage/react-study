.nav
	position fixed
	top 0
	width 100%
	display flex
	align-items center
	white-space nowrap
	box-sizing border-box
	height 70px
	z-index 9999
	background white
	box-shadow: 0 1px 100px 0 #ccc;
	.nav-icon
		font-size 50px
		color #616157
		margin 0 10px
		cursor pointer
	.nav-link-ul
		display flex
		align-items center
		.nav-link-li
			position relative
			margin-right 10px
			color #212121
	.nav-search
		margin 0 30px
		flex 1
		display flex
		align-items center
		.nav-search-input
			flex 1
			padding-left 10px
			line-height 28px
			border 1px solid #82b7c1;
			background-color #fff
			box-shadow none
			color #999
			font-size 14px
			text-align left
		.nav-search-btn
			padding 0 10px
			line-height 28px
			font-size 22px
			font-weight 400
			color #1890ff
			border-radius 3px
			border 1px solid #1890ff
			cursor pointer


